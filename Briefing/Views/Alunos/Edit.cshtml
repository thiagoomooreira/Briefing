@model Briefing.Models.Aluno

<div class="container">
    @using (Html.BeginForm("Edit", "Alunos", FormMethod.Post))
    {
        <div class="form">
            @Html.AntiForgeryToken()

            <div class="form-title">
                <a class="button_circle_form left" href="@Url.Action("Index")">
                    <span class="material-icons">arrow_back</span>
                </a>
                <h2 class=''>Editar Aluno</h2>
            </div>

            <h2 class='field'>Aluno</h2>

            @Html.HiddenFor(model => model.Id, new { Name = "Aluno.Id" })
            @Html.HiddenFor(model => model.DataCadastro, new { Name = "Aluno.DataCadastro" })

            <p class='field required'>
                <label class='label required' for='name'>Nome</label>
                <input class='text-input' id='name' name='Aluno.Nome' required type='text' value='@Model.Nome'>
            </p>
            <p class='field required half'>
                <label class='label required' for='cpfAluno'>CPF</label>
                <label class="valid_cpf hide cpf_aluno">CPF inválido.</label>
                <input class='cpf text-input' id='cpfAluno' name='Aluno.Cpf' required type='text' value='@Model.Cpf'>
            </p>
            <p class='field required half'>
                <label class='label required' for='sexo'>Sexo</label>
                <input class='text-input' id='sexo' name='Aluno.Sexo' required type='text' value='@Model.Sexo'>
            </p>
            <p class='field required half'>
                <label class='label required' for='telefone'>Telefone</label>
                <input class='text-input' id='telefone' name='Aluno.Telefone' required type='tel' value='@Model.Telefone'>
            </p>
            <p class='field required half'>
                <label class='label required' for='rg'>Rg</label>
                <input class='text-input' id='rg' name='Aluno.Rg' required type='text' value='@Model.Rg'>
            </p>
            <p class='field required half'>
                <label class='label required' for='dataNascimento'>Data de Nascimento</label>
                @Html.TextBoxFor(model => model.DataNascimento, new { @class = "text-input", Name = "Aluno.DataNascimento", @id = "dataNascimento", @required = "required" })

            </p>
            <p class='field required half'>
                <label class='label required' for='matricula'>Matricula</label>
                <input class='text-input' id='matricula' name='Aluno.Matricula' required type='text' value='@Model.Matricula'>
            </p>
            <p class='field required half'>
                <label class='label required' for='idade'>Idade</label>
                <input class='text-input' id='idade' name='Aluno.Idade' required type='number' value='@Model.Idade'>
            </p>
            <p class='field required half'>
                <label class='label required' for='email'>E-mail</label>
                <input class='text-input' id='email' name='Aluno.Email' required type='email' value='@Model.Email'>
            </p>

            <h2 class='field'>Endereço</h2>

            @Html.HiddenFor(model => model.IdEndereco, new { Name = "Aluno.IdEndereco" })
            @Html.HiddenFor(model => model.Endereco.Id, new { Name = "Aluno.Endereco.Id" })
            <p class='field required half'>
                <label class='label required' for='rua'>Rua</label>
                <input class='text-input' id='rua' name='Aluno.Endereco.Rua' required type='text' value='@Model.Endereco.Rua'>
            </p>
            <p class='field required half'>
                <label class='label required' for='bairro'>Bairro</label>
                <input class='text-input' id='bairro' name='Aluno.Endereco.Bairro' required type='text' value='@Model.Endereco.Bairro'>
            </p>
            <p class='field required half'>
                <label class='label required' for='cep'>CEP</label>
                <input class='text-input' id='cep' name='Aluno.Endereco.Cep' required type='text' value='@Model.Endereco.Cep'>
            </p>
            <p class='field required half'>
                @Html.LabelFor(model => model.Endereco.IdCidade, "Cidade", htmlAttributes: new { @class = "label", @for = "cidade" })

                @Html.DropDownList("Aluno.Endereco.IdCidade", (SelectList)ViewBag.IdCidade, htmlAttributes: new { @class = "text-input", @required = "required" })
            </p>

            <h2 class='field'>Pai</h2>

            @Html.HiddenFor(model => model.IdPai, new { Name = "Aluno.IdPai" })
            @Html.HiddenFor(model => model.Pai.DataCadastro, new { Name = "Aluno.Pai.DataCadastro" })

            <p class='field required'>
                <label class='label required' for='nomePai'>Nome</label>
                <input class='text-input' id='nomePai' name='Aluno.Pai.Nome' required type='text' value='@Model.Pai.Nome'>
            </p>
            <p class='field required half'>
                <label class='label required' for='rgPai'>Rg</label>
                <input class='text-input' id='rgPai' name='Aluno.Pai.Rg' required type='text' value='@Model.Pai.Rg'>
            </p>
            <p class='field required half'>
                <label class='label required' for='cpfPai'>Cpf</label>
                <label class="valid_cpf hide cpf_pai">CPF inválido.</label>
                <input class='text-input' id='cpfPai' name='Aluno.Pai.Cpf' required type='text' value='@Model.Pai.Cpf'>
            </p>
            <p class='field required half'>
                <label class='label required' for='profissaoPai'>Profissão</label>
                <input class='text-input' id='profissaoPai' name='Aluno.Pai.Profissao' required type='text' value='@Model.Pai.Profissao'>
            </p>
            <p class='field required half'>
                <label class='label required' for='celularPai'>Celular</label>
                <input class='text-input' id='celularPai' name='Aluno.Pai.Celular' required type='text' value='@Model.Pai.Celular'>
            </p>

            <h2 class='field'>Mãe</h2>

            @Html.HiddenFor(model => model.IdMae, new { Name = "Aluno.IdMae" })
            @Html.HiddenFor(model => model.Mae.DataCadastro, new { Name = "Aluno.Mae.DataCadastro" })

            <p class='field required'>
                <label class='label required' for='nomeMae'>Nome</label>
                <input class='text-input' id='nomeMae' name='Aluno.Mae.Nome' required type='text' value='@Model.Mae.Nome'>
            </p>
            <p class='field required half'>
                <label class='label required' for='rgMae'>Rg</label>
                <input class='text-input' id='rgMae' name='Aluno.Mae.Rg' required type='text' value='@Model.Mae.Rg'>
            </p>
            <p class='field required half'>
                <label class='label' for='cpfMae'>Cpf</label>
                <label class="valid_cpf hide cpf_mae">CPF inválido.</label>
                <input class='text-input' id='cpfMae' name='Aluno.Mae.Cpf' required type='text' value='@Model.Mae.Cpf'>
            </p>
            <p class='field required half'>
                <label class='label required' for='profissaoMae'>Profissão</label>
                <input class='text-input' id='profissaoMae' name='Aluno.Mae.Profissao' required type='text' value='@Model.Mae.Profissao'>
            </p>
            <p class='field required half'>
                <label class='label required' for='celularMae'>Celular</label>
                <input class='text-input' id='celularMae' name='Aluno.Mae.Celular' required type='text' value='@Model.Mae.Celular'>
            </p>
            <p class='field half'>
                <input class='button button-submit' type='submit' value='Enviar'>
            </p>
        </div>

    }
</div>
